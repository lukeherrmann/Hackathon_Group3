<form class="ui inverted form">
<%= form_with(model: @trip, local: true, class: "ui form") do |f| %>
  <div class = "field" >
  <%= f.label  :name %>
  <%= f.text_field :name, required: true, placeholder: "Name of Trip" %>
  </div>

  <div class = "field" >
  <label><%= f.label :start_date %></label>
  <%= f.datetime_field :start_date %>
  </div>

  <div class = "field" >
  <%= f.label :end_date %>
  <%= f.datetime_field :end_date %>
  </div>
  
 

  <%= f.submit%>

  <%end %>
  </form>
